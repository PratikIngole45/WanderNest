<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <h2 class="mb-4">Saved Properties</h2>

  <% if (listings.length === 0) { %>
    <p class="text-muted">You haven't saved any properties yet.</p>
  <% } else { %>
    <div class="row">
      <% listings.forEach(listing => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text text-muted"><%= listing.location %></p>
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm">View Listing</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

