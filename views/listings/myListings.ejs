
<% layout("/layouts/boilerplate") %> 

<style>
  .container {
    max-width: 1200px;
  }

  .listings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .create-btn {
    background-color: #007bff;
    color: white;
    font-weight: 600;
    border-radius: 8px;
    padding: 10px 18px;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .create-btn:hover {
    background-color: #0056b3;
    text-decoration: none;
  }

  .card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
  }

  .card-img-top {
    height: 220px;
    width: 100%;
    object-fit: cover;
  }

  .card-body {
    padding: 15px 20px;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #343a40;
  }

  .card-text {
    font-size: 1rem;
    color: #6c757d;
    margin-bottom: 12px;
  }

  .btn-outline-primary {
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.9rem;
    padding: 6px 14px;
  }

  .text-muted {
    font-style: italic;
    font-size: 1rem;
  }
</style>

<div class="container mt-5">
  <div class="listings-header mb-4">
    <h2 class="mb-0">My Listings</h2>
    <a href="/listings/new" class="create-btn">+ Create New Listing</a>
  </div>

  <% if (listings.length === 0) { %>
    <p class="text-muted">You haven't created any listings yet. Start by clicking "Create New Listing".</p>
  <% } else { %>
    <div class="row g-4"> <!-- g-4 adds consistent gap between grid items -->
      <% listings.forEach(listing => { %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="card shadow-sm" onclick="location.href='/listings/<%= listing._id %>'">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.location %></p>
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm">View Listing</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>


