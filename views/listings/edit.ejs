<%layout("layouts/boilerplate") %>
<body>
    
    <form method="POST" action="/listings/<%=listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit your Listings : <%=listing._id %></h3>
                <div class="mb-3">
                    <label for= "title" class="form-label">Title :</label>
                    <input name="listing[title]" type="string" value="<%=listing.title %>" class="form-control" required>
                    <div class="valid-feedback">Looks good title! </div>
                    <div class="invalid-feedback">Please Enter title</div>
                </div>
        
                <div class="mb-3">
                    <label for= "description" class="form-label">Description :</label>
                    <textarea name="listing[description]" type="string" value="<%=listing.description %>" class="form-control" required><%=listing.description %></textarea>
                    <div class="invalid-feedback">Please Enter short description</div>
                </div>

                <div class="mb-3">
                    Original Listing Image :<br>
                   <img src="<%= originalImageUrl %>"></img>
                </div>
                
                <div class="row">
                    <!-- Image Upload -->
                    <div class="mb-3 col-md-6">
                        <label for="image" class="form-label">Upload New Image:</label>
                        <input name="listing[image]" type="file" class="form-control">
                    </div>

                    <!-- Category Select -->
                    <div class="mb-3 col-md-6">
                        <label for="category" class="form-label">Category</label>
                        <select name="listing[category]" id="category" class="form-select" required>
                        <option disabled>Select a category</option>
                        <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
                        <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
                        <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
                        <option value="Farms" <%= listing.category === 'Farms' ? 'selected' : '' %>>Farms</option>
                        <option value="Boats" <%= listing.category === 'Boats' ? 'selected' : '' %>>Boats</option>
                        <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>Castles</option>
                        </select>
                    </div>
                </div>

        
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for= "price" class="form-label">Price :</label>
                        <input name="listing[price]" type="number" value="<%=listing.price %>" class="form-control" required>
                        <div class="invalid-feedback">Please provide valid Price.</div>
                    </div>
            
                    <div class="mb-3 col-md-8">
                        <label for= "country" class="form-label">Country :</label>
                        <input name="listing[country]" type="string" value="<%=listing.country %>" class="form-control" required>
                        <div class="invalid-feedback">Please provide valid Country.</div>
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for= "location" class="form-label">Location :</label>
                    <input name="listing[location]" type="string" value="<%=listing.location %>" class="form-control" required>
                    <div class="invalid-feedback">Please provide valid Location.</div>
                </div>
                
                <button class="btn btn-blue edit-btn mt-3 mb-3">Edit</button>
            
            </div>
        </div>
        
    </form>
    
</body>



