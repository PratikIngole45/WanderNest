<% layout("/layouts/boilerplate") %>
<body>
    <!-- <h3>Add New Listening</h3> -->
    <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Add New Listing</h3>
                <div class="mb-3">
                    <label for= "title" class="form-label">Title :</label>
                    <input name="listing[title]" type="string" placeholder="Enter sticky title" class="form-control" required>
                    <div class="valid-feedback">Looks good title! </div>
                    <div class="invalid-feedback">Please Enter title</div>
                </div>
                <div class="mb-3">
                    <label for= "description" class="form-label">Description :</label>
                    <textarea name="listing[description]" type="string" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please Enter short description</div>
                </div>
                <div class="mb-3">
                    <label for= "image" class="form-label">Upload Image :</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for= "price" class="form-label">Price :</label>
                        <input name="listing[price]"  placeholder="Enter price" class="form-control" required>
                        <div class="invalid-feedback">Please provide valid Price.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for= "country" class="form-label" >Country :</label>
                        <input name="listing[country]" type="string" placeholder="Enter country" class="form-control" required>
                        <div class="invalid-feedback">Please provide valid Country.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for= "location" class="form-label" >Location :</label>
                    <input name="listing[location]" type="string" placeholder="Enter location" class="form-control" required>
                    <div class="invalid-feedback">Please provide valid Location.</div>
                </div>
            
                <button class="btn btn-dark add-btn mt-3 mb-3">ADD</button>
               
            </div>
        </div>
    </form>
</body>
